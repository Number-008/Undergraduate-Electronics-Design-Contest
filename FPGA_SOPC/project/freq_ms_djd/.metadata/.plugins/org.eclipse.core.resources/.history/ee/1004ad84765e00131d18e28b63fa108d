#include "lcd12864.h"
#include "stdio.h"
#include "system.h"
#include "io.h"
#define ReadRef IORD(DJD_BASE,0)
#define ReadTest IORD(DJD_BASE,1)
double n;
char d[14];
void DJDaut(void)
{


	//alt_u32 d1,d2;
	//d1=ReadTest;
	//d2=ReadRef;
	//n=(d1*200000000.0f)/d2;
	n=12000000;
	if(n>=0.000 && n<0.001)
	{
		n=n*1000000;
		sprintf(d,"%10.6fuHz",n);
	}
	else if(n>=0.001 && n<1)
	{
		n=n*1000;
		sprintf(d,"%10.6mHzf",n);
	}
	else if(n>=1 && n<1000)
		{
			sprintf(d,"%10.6fHz ",n);

		}
	else if(n>=1000 && n<1000000)
		{
			n=n/1000;
			sprintf(d,"%10.6fKHz",n);
		}
	else if(n>=1000000)
		{
			d[0]=(alt_u32)n/100000000+0x30;
			d[1]=(alt_u32)n/10000000%10+0x30;
			d[2]=(alt_u32)n/1000000%10+0x30;
			d[3]='.';
			d[4]=(alt_u32)n/100000%10+0x30;
			d[5]=(alt_u32)n/10000%10+0x30;
			d[5]=(alt_u32)n/1000%10+0x30;
			d[5]=(alt_u32)n/100%10+0x30;
			d[5]=(alt_u32)n/10%10+0x30;
			d[5]=(alt_u32)n%10+0x30;
			d[10]='M';
			d[11]='H';
			d[12]='z';

		}
	d[13]='\0';
	LCD_ShowString(1,2,d);
}

int main(void)
{
	LCD_Init();//lcd12864≥ı ºªØ
	LCD_ShowString(1,1,"OK");
	DJDaut();
/*	while(1)
	{
		DJDaut();
		usleep(100000);
	}*/
    return 0;
}

