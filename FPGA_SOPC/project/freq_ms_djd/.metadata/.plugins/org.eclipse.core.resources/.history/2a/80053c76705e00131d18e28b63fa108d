#include "djd.h"
#include "alt_types.h"
#include "lcd12864.h"
#include "string.h"
/********************************************************************
* 名 称：aut(double n)
* 功 能：自动切换显示单位
* 入口参数：n
* 出口参数：无
********************************************************************/
void DJDaut(void)
{
	char d[16];
	double n;
	//alt_u32 d1,d2;
	//d1=ReadTest;
	//d2=ReadRef;
	//n=(d1*200000000.0f)/d2;
	n=1000000;
	if(n>=0.000 && n<0.001)
	{
		n=n*1000000;
		sprintf(d,"%13.8fuHz",(double)n);
	}
	else if(n>=0.001 && n<1)
	{
		n=n*1000;
		sprintf(d,"%13.8fmHz",(double)n);
	}
	else if(n>=1 && n<1000)
		{
			sprintf(d,"%13.8fHz ",(double)n);

		}
	else if(n>=1000 && n<1000000)
		{
			n=n/1000;
			sprintf(d,"%13.8fKHz",(double)n);
		}
	else if(n>=1000000)
		{
			n=n/1000000;
			sprintf(d,"%13.8fMHz",(double)n);

		}
	//d[13]='\0';
	LCD_ShowString(1,2,d);
}
