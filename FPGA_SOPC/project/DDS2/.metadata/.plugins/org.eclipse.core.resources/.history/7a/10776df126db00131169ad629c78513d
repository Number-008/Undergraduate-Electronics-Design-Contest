#include "dds.h"
#include "string.h"
#include "lcd12864.h"
#include "dds_data.h"
alt_u32 freq=1000;
alt_u16 pha=0;

void WriteFreq(double n)//2^48=281474976710656;
{
	alt_u64 K;
	K=n*2814749.76710656;
	FREQW_L((alt_u32) K);
	FREQW_H((alt_u32)(K>> 32 ));
}

void WritePhasew(float n)
{
	double P;
	P=n*0.087890625;
	PHASEW((alt_u32) P);

}


//ÏÔÊ¾ÆµÂÊÖµ
void DDS_OUT(double n)
{
   char d[14];
   double Fn;

   Fn=n;
   WriteFreq(Fn);
   if(Fn>=0.000 && Fn<0.001)
   	{
	   Fn=Fn*1000000;
   		sprintf(d,"%10.6fuHz",(double)Fn);
   	}
   else if(Fn>=0.001 && Fn<1)
   	{
	   Fn=Fn*1000;
   		sprintf(d,"%10.6fmHz",(double)Fn);
   	}
   	else if(Fn>=1 && Fn<1000)
   		{
   			sprintf(d,"%10.6fHz ",(double)Fn);

   		}
   	else if(Fn>=1000 && Fn<1000000)
   		{
   			Fn=Fn/1000;
   			sprintf(d,"%10.6fKHz",(double)Fn);
   		}
   	else if(Fn>=1000000)
   		{
   			Fn=Fn/1000000;
   			sprintf(d,"%10.6fMHz",(double)Fn);

   		}

   LCD_ShowString(6,2,d);

}

void DDS_Phasew(float n)
{
   char d[4];
   WritePhasew(n/10.0f);
   d[0]=(alt_u32)n/1000+0x30;
   d[1]=(alt_u32)n/100%10+0x30;
   d[2]=(alt_u32)n/10%10+0x30;
   //d[3]='.';
   //d[4]=(alt_u32)n%10+0x30;
   d[3]='\0';
   LCD_ShowString(8,1,d);

}

//0--zÕýÏÒ²¨£»1--·½²¨£» 2--Èý½Ç²¨;3--¾â³Ý²¨
void DDS_RAM_WR(alt_u8 n)
{
	alt_u16 i;
	switch(n)
	{
		case 0:{
				for(i = 0; i < 4096; i++)
					DDS_DATA_WRITE(i,sin[i]);
				//printf("ÕýÏÒ²¨\n");
				LCD_ShowString(5,1,"1");
		}break;
		case 1:{
			for(i = 0; i < 4096; i++)
				DDS_DATA_WRITE(i,fb[i]);
			//printf("·½²¨\n");
			LCD_ShowString(5,1,"2");
		}break;
		case 2:{
			for(i = 0; i < 4096; i++)
				DDS_DATA_WRITE(i,san[i]);
			//printf("Èý½Ç²¨\n");
			LCD_ShowString(5,1,"3");
		}break;
		case 3:{
			for(i = 0; i < 4096; i++)
				DDS_DATA_WRITE(i,jc[i]);
			//printf("¾â³Ý²¨\n");
			LCD_ShowString(5,1,"4");
		}break;
		default:
			break;
	}


}

void DDS_Init(void)
{
	freq=1000;
	pha=0;
	DDS_OUT(freq);
	DDS_Phasew(pha);

}
